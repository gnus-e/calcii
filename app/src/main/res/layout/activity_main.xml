<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:orientation="vertical">
    <TableRow>
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5pt"
            android:id="@+id/textViewInput"
            android:textSize="25pt"
            android:layout_width="match_parent">
        </TextView>
        </TableRow>
    <TableRow>
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5pt"
            android:id="@+id/text_Result"
            android:textSize="25pt"
            android:layout_width="match_parent">
        </TextView>
    </TableRow>
    <TableRow>
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
        <Button
            android:layout_weight="1"
            android:text="7"
            android:id="@+id/button_num_7"
            android:onClick="onNumClick">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="8"
            android:id="@+id/button_num_8"
            android:onClick="onNumClick">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="9"
            android:id="@+id/button_num_9"
            android:onClick="onNumClick">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="+"
            android:id="@+id/button_add"
            android:onClick="onOperatorClick">
        </Button>
    </TableRow>

    <TableRow>
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button
            android:layout_weight="1"
            android:text="4"
            android:id="@+id/button_num_4"
            android:onClick="onNumClick">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="5"
            android:id="@+id/button_num_5"
        android:onClick="onNumClick">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="6"
            android:id="@+id/button_num_6">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="-"
            android:id="@+id/button_sub"
            android:onClick="onOperatorClick">
        </Button>
    </TableRow>
    <TableRow>
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button
            android:layout_weight="1"
            android:text="1"
            android:id="@+id/button_num_1"
            android:onClick="onNumClick">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="2"
            android:id="@+id/button_num_2"
            android:onClick="onNumClick">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="3"
            android:id="@+id/button_num_3"
            android:onClick="onNumClick">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="*"
            android:id="@+id/button_mul"
            android:onClick="onOperatorClick">
        </Button>
    </TableRow>
    <TableRow>
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button
            android:layout_weight="1"
            android:text="."
            android:id="@+id/button_num_dot">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/button_num_0"
            android:onClick="onNumClick">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="="
            android:id="@+id/button_equal"
            android:onClick="showResult">
        </Button>
        <Button
            android:layout_weight="1"
            android:text="%"
            android:id="@+id/button_division"
            android:onClick="onOperatorClick">
        </Button>
    </TableRow>

    </TableLayout>
